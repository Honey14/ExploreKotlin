<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blueish"
    android:orientation="vertical"
    tools:context=".GameActivity">

    <TextView
        android:id="@+id/text_head"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:gravity="center_horizontal"
        android:text="Division Level 1"
        android:textColor="@color/colorAccent"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/text_question1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:text="Can you tap on 4 strawberries ? "
        android:textColor="@color/colorAccent"
        android:textSize="14sp" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="40dp">

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_gravity="center_vertical"
            android:background="@color/yellow" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical">

            <ImageView
                android:id="@+id/image1"
                android:layout_width="30dp"
                android:layout_height="25dp"
                android:src="@drawable/ic_strawberry" />

            <ImageView
                android:id="@+id/image2"
                android:layout_width="30dp"
                android:layout_height="25dp"
                android:src="@drawable/ic_strawberry" />

            <ImageView
                android:id="@+id/image3"
                android:layout_width="30dp"
                android:layout_height="25dp"
                android:src="@drawable/ic_strawberry" />

            <ImageView
                android:id="@+id/image4"
                android:layout_width="30dp"
                android:layout_height="25dp"
                android:src="@drawable/ic_strawberry" />

            <ImageView
                android:id="@+id/image5"
                android:layout_width="30dp"
                android:layout_height="25dp"
                android:src="@drawable/ic_strawberry" />

            <ImageView
                android:id="@+id/image6"
                android:layout_width="30dp"
                android:layout_height="25dp"
                android:src="@drawable/ic_strawberry" />

            <View
                android:id="@+id/view1"
                android:layout_width="70dp"
                android:layout_height="35dp"
                android:layout_marginStart="170dp"
                android:background="@drawable/outline_white"
                android:visibility="gone" />

            <View
                android:id="@+id/view2"
                android:layout_width="70dp"
                android:layout_height="35dp"
                android:background="@drawable/outline_white"
                android:visibility="gone" />
        </LinearLayout>
    </FrameLayout>

    <TextView
        android:id="@+id/text_question2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:text="Can you tap on 2 strawberries ? "
        android:textColor="@color/colorAccent" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="40dp">

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_gravity="center_vertical"
            android:background="@color/yellow" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="25dp"
                android:src="@drawable/ic_strawberry" />

            <ImageView
                android:layout_width="30dp"
                android:layout_height="25dp"
                android:src="@drawable/ic_strawberry" />

            <ImageView
                android:layout_width="30dp"
                android:layout_height="25dp"
                android:src="@drawable/ic_strawberry" />

            <ImageView
                android:layout_width="30dp"
                android:layout_height="25dp"
                android:src="@drawable/ic_strawberry" />

            <ImageView
                android:id="@+id/image7"
                android:layout_width="30dp"
                android:layout_height="25dp"
                android:src="@drawable/ic_strawberry" />

            <ImageView
                android:id="@+id/image8"
                android:layout_width="30dp"
                android:layout_height="25dp"
                android:src="@drawable/ic_strawberry" />


        </LinearLayout>
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="5dp"
        android:gravity="bottom"
        android:orientation="vertical">

        <TextView
            android:id="@+id/text_main"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="4 / 2 ? "
            android:textColor="@color/colorAccent" />

        <TextView
            android:id="@+id/text_remaining"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="Can you count the number of boxes ? "
            android:textColor="@color/colorAccent" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/answer1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:background="@drawable/light_bg"
                android:padding="20dp"
                android:text="4"
                android:textColor="@color/colorAccent"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/answer2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:background="@drawable/light_bg"
                android:padding="20dp"
                android:text="2"
                android:textColor="@color/colorAccent"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/answer3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:background="@drawable/light_bg"
                android:padding="20dp"
                android:text="8"
                android:textColor="@color/colorAccent"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/answer4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:background="@drawable/light_bg"
                android:padding="20dp"
                android:text="0"
                android:textColor="@color/colorAccent"
                android:textSize="14sp"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>